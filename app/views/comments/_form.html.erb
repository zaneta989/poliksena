<% if !user_signed_in?  %>
    <div class="notice">
      <p>Musisz się zalogować aby dodawać komentzarze!</p>
    </div>
<%else%>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :Komentarz %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
<%end%>