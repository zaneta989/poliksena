<div class="post">

  <h4><%= @article.updated_at.to_formatted_s(:long_ordinal)%></h4>
  <h1><%= @article.title %></h1>
  <%= @article.text %>
  <br><br>

  <h2>Comments</h2>
  <%= render @article.comments %>

  <%= render 'comments/form' %>
  <div class="przyciski">
    <strong>
      <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', articles_path %>
    </strong>
  </div>
</div>