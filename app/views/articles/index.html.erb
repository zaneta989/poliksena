
<% @articles.each do |article| %>
  <div class="post">
    <h1><%= article.title %></h1>
    <%= article.text %>
    <br><br>
    <%= link_to 'Show', article_path(article) %>
    <%= link_to 'Edit', edit_article_path(article) %>
    <%= link_to 'Destroy', article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>


<p><%= link_to 'New article', new_article_path %></p>