<div class="post">
  <div class="logowanie">
    <h2>Logowanie</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <p><%= f.label :Login %><br />
            <%= f.text_field :login %>
          </p>
        </div>

        <div class="field">
          <%= f.label 'Hasło' %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label 'Pamiętaj mnie' %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Zaloguj" %>
        </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>

</div>